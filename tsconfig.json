{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es2016", "ES2020.Promise"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "experimentalDecorators": true,
    "importsNotUsedAsValues": "error",
    "noUnusedLocals": false,
    "target": "esnext"
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
